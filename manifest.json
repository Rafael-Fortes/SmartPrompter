{
    "manifest_version": 2,
    "name": "SmartPrompter",
    "version": "1.0",
    "description": "Aprimora e refina prompts usando InteligÃªncia Artificial.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "activeTab",
      "storage",
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "scripts": ["src/background/background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["src/content/content.js"]
      }
    ],
    "browser_action": {
      "default_icon": "icons/icon48.png",
      "default_popup": "src/popup/popup.html"
    },
    "options_page": "src/options/options.html",
    "web_accessible_resources": [
      "src/lib/tensorflow.js"
    ]
  }